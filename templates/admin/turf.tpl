<form class="turf-settings" role="form">
  <div class="row">
    <div class="col-sm-2 col-xs-12 settings-header">Turf</div>
    <div class="col-sm-10 col-xs-12">
      <p class="lead">A widget that shows your turf user list</p>
      <div class="form-group">
        <label for="users">Users</label>
        <input class="form-control" id="users" name="users" placeholder="Comma separated list of users." title="Users" type="text">
      </div>
    </div>
  </div>
</form>

<button class="floating-button mdl-button mdl-button--colored mdl-button--fab mdl-js-button mdl-js-ripple-effect" id="save">
  <i class="material-icons">save</i>
</button>
